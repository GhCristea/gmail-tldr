{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "manifest_version": 3,
  "name": "Gmail TLDR",
  "version": "1.0.0",
  "description": "Chrome Extension MV3 for Gmail email processing with AI-powered summaries",
  "permissions": ["identity", "alarms", "storage", "notifications", "offscreen"],
  "host_permissions": ["https://www.googleapis.com/"],
  "background": { "service_worker": "src/background.ts", "type": "module" },
  "action": {
    "default_popup": "static/popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "64": "icon64.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "oauth2": {
    "client_id": "YOUR_EXTENSION_CLIENT_ID.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/gmail.readonly", "https://www.googleapis.com/auth/gmail.modify"]
  }
}
