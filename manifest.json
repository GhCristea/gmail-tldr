{
  "manifest_version": 3,
  "name": "Gmail TLDR",
  "version": "1.0.0",
  "description": "TL;DR summaries for Gmail with local SQLite storage",

  "offscreen_documents": [
    {
      "document": "static/offscreen.html",
      "matches": ["<all_urls>"],
      "reasons": ["WORKERS"]
    }
  ],

  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://www.gmail.com/*", "https://mail.google.com/*"],
      "js": ["src/content.ts"],
      "run_at": "document_start"
    }
  ],

  "permissions": [
    "storage",
    "alarms",
    "runtime",
    "offscreen"
  ],

  "host_permissions": [
    "https://www.gmail.com/*",
    "https://mail.google.com/*"
  ],

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "action": {
    "default_title": "Gmail TLDR",
    "default_popup": "static/popup.html",
    "default_icons": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  }
}
